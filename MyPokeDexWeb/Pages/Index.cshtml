        font-weight:500;

    }

    #addNav{
        font-family: Pokemon;
        cursor: url('/images/Pointer.ico'), default;
        
    }

    .table {
        border-collapse: collapse;
        width: 100%;
        border-style: groove;
    }

    th, td {
        text-align: left;
        padding: 8px;
    }
    th{
        font-family: Pokemon;
    }

    tr:nth-child(even) {
        background-color: Lightgrey;
    }

    img{
        max-width: 1px;
        height:auto;
    }

    img-container{
       max-width:20px;
       hieght:auto;
    }
   
</style>

