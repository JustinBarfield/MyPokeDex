@page
@model MyPokeDexWeb.Pages.Account.DeleteUsersModel
@{
    Layout = HttpContext.User.Identity.IsAuthenticated ? "_Layout -Authenticated" : "_Layout";
}



<style>

        html {
            cursor: url('/images/Cursor.ico'), default;
        }

        #btnEdit {
            cursor: url('/images/Pointer.ico'), default;
        }

        #btnDel {
            cursor: url('/images/Pointer.ico'), default;
        }

        #btnView {
            cursor: url('/images/Pointer.ico'), default;
        }

        .drop, .form-label {
            cursor: url('/images/Cursor.ico'), default;
        }


        .table {
            border-collapse: collapse;
            width: 100%;
            border-style: groove;
        }

        th, td {
            text-align: left;
            padding: 8px;
        }


        tr:nth-child(even) {
            background-color: Lightgrey;
        }


        .custom-btn {
            width: 100%;
        }

        img {
            max-width: 1px;
            height: auto;
        }
</style>

<section>
    <div class="container py-5">
        <form method="post" class="form-group">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>PersonID</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>RoleID</th>
                            <th>Phone</th>
                            <th>Last Login Time</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var person in Model.PersonItems)
                        {
                            <tr>
                                <td>@person.PersonID</td>
                                <td>@person.FirstName</td>
                                <td>@person.LastName</td>
                                <td>@person.Email</td>
                                <td>@person.RoleID</td>
                                <td>@person.Phone</td>
                                <td>@person.LastLoginTime</td>
                                <td>
                                    <a asp-page="DeleteUserItems" asp-route-id="@person.PersonID" class="btn btn-danger" id="btnDel" onclick="return confirm('Are you sure you want to delete this person? This cannot be undone!')">
                                        <i class="bi bi-trash3"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </form>
    </div>
</section>
