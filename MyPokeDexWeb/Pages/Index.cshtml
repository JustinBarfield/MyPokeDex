@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    Layout = HttpContext.User.Identity.IsAuthenticated ? "_Layout -Authenticated" : "_Layout";
}

<section>

    <div class="container py-5">
        <div class="row">
            <div class="col-md-6">
                <h2>Welcome to Your Pokédex!</h2>
                <p>Start your journey by exploring Pokémon from various regions and adding them to your personal Pokédex.</p>
                <a class="nav-link text-blue" asp-area="" asp-page="/Account/Dexs/AddPokemon">Add Pokémon to Your Dex</a>
            </div>
            <div class="col-md-6">
                <img src="pokedex_image.jpg" alt="Pokédex Image" class="img-fluid">
            </div>
        </div>
    </div>



    <div class="container py-5">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Pokemon ID</th>
                            <th>Dex Number</th>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Total State</th>
                            
                            <th>Region</th>
                            <th>Height</th>
                            <th>Weight</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pokemon in Model.PokemonItems)
                        {
                            <tr>
                                <td>@pokemon.PokemonID</td>
                                <td>@pokemon.DexNumber</td>
                                <td>@pokemon.Name</td>
                                <td>@pokemon.PokemonTypeID</td> <!-- Display type name here -->
                                <td>@pokemon.StateTotal</td>
                                <td>@pokemon.PokemonRegionID</td> <!-- Display region name here -->
                                <td>@pokemon.Height</td>
                                <td>@pokemon.Weight</td>
                                
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
    </div>
</section>