@page
@model MyPokeDexWeb.Pages.Account.Dexs.DeletePokemonModel
@{
}

<p>Are you sure you want to Delete this Pokemon? need to display the pokemon ID to confirm you are deleting the correct pokemon</p>

<div class="col-2">
    <button class="btn btn-danger btn-block custom-btn" id="btnDel">Delete</button>
</div>

<div class="col-2">
    <button class="btn btn-primary btn-block custom-btn" id="btnDel">Cancel</button>
</div>
<form method="post" class=" form-group">
    <section>
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-light text-black">
                        <div class="card-body p-5 text-center">
                            <form method="post">
                                <div class="row text-black-danger" asp-validation-summary="All"></div>

                                
                              




                                <div class="row m-2">
                                    <div class="col-2">
                                        <label asp-for="Pokemon.PokemonID" class="form-label"></label>
                                    </div>
                                    <div class="col-10">
                                       
                                        <span asp-validation-for="Pokemon.PokemonID" class="text-danger"></span>
                                    </div>

                                </div>

                                <div class="row m-2">
                                    <div class="col-2">
                                        <label asp-for="Pokemon.Name" class="form-label"></label>
                                    </div>
                                    <div class="col-10">
                                        
                                        <span asp-validation-for="Pokemon.Name" class="text-danger"></span>
                                    </div>

                                </div>

                                <div class="row m-2">
                                    <div class="col-2">
                                        <label asp-for="Pokemon.DexNumber" class="form-label"></label>
                                    </div>
                                    <div class="col-10">
                                        
                                        <span asp-validation-for="Pokemon.DexNumber" class="text-danger"></span>
                                    </div>

                                </div>

                                <div class="row m-2">
                                    <div class="col-2">
                                        <label asp-for="Pokemon.TypeID " class="form-label"> </label>
                                    </div>
                                    <div class="col-10">
                                       
                                        <span asp-validation-for="Pokemon.TypeID" class="text-danger"></span>
                                    </div>

                                </div>

                                <div class="row m-2">
                                    <div class="col-2">
                                        <label asp-for="Pokemon.StateTotal" class="form-label"></label>
                                    </div>
                                    <div class="col-10">
                                        
                                        <span asp-validation-for="Pokemon.StateTotal" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row m-2">
                                    <div class="col-2">
                                        <label asp-for="Pokemon.RegionID" class="form-label"></label>
                                    </div>
                                    <div class="col-10">
                                        
                                        <span asp-validation-for="Pokemon.RegionID" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row m-2">
                                    <div class="col-2">
                                        <label asp-for="Pokemon.Height" class="form-label"></label>
                                    </div>
                                    <div class="col-10">
                                       
                                        <span asp-validation-for="Pokemon.Height" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row m-2">
                                    <div class="col-2">
                                        <label asp-for="Pokemon.Weight" class="form-label"></label>
                                    </div>
                                    <div class="col-10">
                                       
                                        <span asp-validation-for="Pokemon.Weight" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row m-2">
                                    <div class="col-2">
                                        <label asp-for="Pokemon.Audio" class="form-label"></label>
                                    </div>
                                    <div class="col-10">
                                        
                                        <span asp-validation-for="Pokemon.Audio" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row m-2">
                                    <div class="col-2">
                                        <label asp-for="Pokemon.ImageURL" class="form-label"></label>
                                    </div>
                                    <div class="col-10">
                                        
                                        <span asp-validation-for="Pokemon.ImageURL" class="text-danger"></span>
                                    </div>
                                </div>


                                @foreach (CategoryInfo category in Model.categories)
                                {
                                    <input type="checkbox" name="SelectedCategoryIDs" value="@category.CategoryId" checked="@category.isSelected" />
                                    <label>@category.CategoryName</label>
                                }


                                



                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>