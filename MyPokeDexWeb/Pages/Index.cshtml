@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    Layout = HttpContext.User.Identity.IsAuthenticated ? "_Layout -Authenticated" : "_Layout";
}


<section>
	<div class="container py-5">
		<form method="post" class="form-group">
			




			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th>Pokemon ID</th>
							<th>Dex Number</th>
							<th>Name</th>
							<th>Type</th>
							<th>Total State</th>
							<th>Image URL</th>
							<th>Region</th>
							<th>Height</th>
							<th>Weight</th>
							
						</tr>
					</thead>
					<tbody>
						@foreach (var pokemon in Model.PokemonItems)
						{
							<tr>
								<td>@pokemon.PokemonID</td>
								<td>@pokemon.DexNumber</td>
								<td>@pokemon.Name</td>
								<td>@pokemon.TypeID</td>
								<td>@pokemon.StateTotal</td>
								<td>@pokemon.ImageURL</td>
								<td>@pokemon.RegionID</td>
								<td>@pokemon.Height</td>
								<td>@pokemon.Weight</td>
								
							</tr>
						}
					</tbody>
				</table>
			</div>


		</form>
	</div>
</section>
