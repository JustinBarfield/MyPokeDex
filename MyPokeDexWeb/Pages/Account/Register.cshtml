@page
@model MyPokeDexWeb.Pages.Account.RegisterModel
@{
}
<style>

	html {
		cursor: url('/images/Cursor.ico'), default;
	}


	.form-control {
		cursor: url('/images/Type.ico'), default;
	}

	.form-label {
		cursor: url('/images/Cursor.ico'), default;
	}

	#btnReg {
		cursor: url('/images/Pointer.ico'), default;
	}

	.drop {
		cursor: url('/images/Cursor.ico'), default;
	}


	body {
		background-color: #f8f9fa;
	}

	.card {
		border-radius: 1rem;
		box-shadow: 0px 4px 20px rgba(0,0,0,0.1);
	}

	.card-body {
		padding: 3.5rem;
	}

	.form-label {
		font-weight: bold;
	}

	.text-danger {
		color: #dc3545;
	}

	.row {
		display: flex;
		align-items: center;
	}

	.col-2 {
		flex: 0 0 auto;
		text-align: right;
		margin-right: 30px;
	}

	.col-10 {
		flex: 1;
	}

	.bg-container {
		position: fixed;
		top: -50%;
		left: -50%;
		width: 200%;
		height: 200%;
		z-index: -1;
	}

		.bg-container img {
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			margin: auto;
			min-width: 50%;
			min-height: 50%;
		}

	img {
		max-width: 1px;
		height: auto;
	}
</style>

<div class="bg-container"><img src="/images/PokemonBackground.png" /></div>
<section>
	<div class="container py-5 h-100">
		<div class="row d-flex justify-content-center align-items-center h-100">
			<div class="col-12 col-md-8 col-lg-6 col-xl-5">
				<div class="card bg-light text-black">
					<div class="card-body p-5 text-center">
						<form method="post">
							<div class="row text-black-danger" asp-validation-summary="All"></div>
							<div class="row m-2">
								<h1>
									Register
								</h1>
							</div>
							<div class="row m-2">
								<div class="col-2">
									<label asp-for="NewPerson.FirstName" class="form-label"></label>
								</div>
								<div class="col-10">
									<input asp-for="NewPerson.FirstName" type="text" class="form-control" />
									<span asp-validation-for="NewPerson.FirstName" class="text-danger"></span>
								</div>

							</div>

							<div class="row m-2">
								<div class="col-2">
									<label asp-for="NewPerson.LastName" class="form-label"></label>
								</div>
								<div class="col-10">
									<input asp-for="NewPerson.LastName" type="text" class="form-control" />
									<span asp-validation-for="NewPerson.LastName" class="text-danger"></span>
								</div>

							</div>

							<div class="row m-2">
								<div class="col-2">
									<label asp-for="NewPerson.Email" class="form-label"></label>
								</div>
								<div class="col-10">
									<input asp-for="NewPerson.Email" type="email" class="form-control" />
									<span asp-validation-for="NewPerson.Email" class="text-danger"></span>
								</div>

							</div>

							<div class="row m-2">
								<div class="col-2">
									<label asp-for="NewPerson.Password" class="form-label"></label>
								</div>
								<div class="col-10">
									<input asp-for="NewPerson.Password" type="password" class="form-control" />
									<span asp-validation-for="NewPerson.Password" class="text-danger"></span>

								</div>

							</div>

							<div class="row m-2">
								<div class="col-2">
									<label asp-for="NewPerson.Phone" class="form-label"></label>
								</div>
								<div class="col-10">
									<input asp-for="NewPerson.Phone" type="tel" class="form-control" />
									<span asp-validation-for="NewPerson.Phone" class="text-danger"></span>
								</div>

							</div>

							<div class="row m-2">
								<a href="Login">Already have an account? Sign in here.</a>
							</div>

							<div class="row m-2 justify-content-center">
								<div class="col-6">
									<button id="btnReg" class="btn btn-primary btn-block"><i class="bi bi-person-add"></i> Register</button>

								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
