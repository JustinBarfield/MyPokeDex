@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    Layout = HttpContext.User.Identity.IsAuthenticated ? "_Layout -Authenticated" : "_Layout";
}

<style>

    html {
        cursor: url('/images/Cursor.ico'), default;
       
    }

    @@font-face {
        font-family: Pokemon;
            src:url(/Fonts/PokemonFont.ttf);
    
    }

    .bg-container{
        position: fixed;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        z-index: -1;
    }
    
    .bg-container img{
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            margin: auto;
            min-width: 50%;
            min-height: 50%;
    }

    h1, h3{
